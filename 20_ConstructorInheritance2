class Parent{
	public Parent(int val){
		System.Console.WriteLine("This is from Parent {0}",val);
	}
}
class Child : Parent{
	public Child(int val){
		System.Console.WriteLine("This is from Child {0} ",val);//This will raise an error. There are two ways to solve it, It is done in //the next 2 programs.
	}
}
class Program{
	public static void Main(){
		Parent p=new Parent(10);
		//Child c=new Child(10); This will raise an error. There are two ways to solve it, It is done in the next 2 programs.
 	}
}